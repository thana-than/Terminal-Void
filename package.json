{
  "name": "terminal-void",
  "description": "A game about space travel, communication, and command line.",
  "main": "index.html",
  "private": true,
  "scripts": {
    "start": "python build_gameFolders.py --dev && npm-run-all --parallel watch:webpack watch:server watch:browser",
    "godmode": "cross-env GODMODE=true STARTCOMMAND=$npm_config_startcommand  npm start",
    "test": "jest",
    "dev": "python build_gameFolders.py --dev && webpack --mode=development",
    "build": "python build_gameFolders.py && webpack --mode=production",
    "watch:webpack": "webpack --mode=development --watch",
    "watch:server": "nodemon --watch gameFolders -e * --exec  python build_gameFolders.py --dev",
    "watch:browser": "browser-sync start --server \"dist\" --files \"dist/**/*\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.24.7",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "semantic-release": "^24.0.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "release.zip",
              "label": "Release"
            }
          ]
        }
      ]
    ]
  },
  "author": "ThanaThan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thana-than/Terminal-Void.git"
  },
  "bugs": {
    "url": "https://github.com/thana-than/Terminal-Void/issues"
  },
  "homepage": "https://github.com/thana-than/Terminal-Void#readme",
  "dependencies": {
    "@react-three/fiber": "^9.1.4",
    "dompurify": "^3.1.5",
    "javascript-color-gradient": "^2.5.0",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "save-dev": "^0.0.1-security",
    "three": "^0.178.0",
    "uuid": "^10.0.0"
  }
}
